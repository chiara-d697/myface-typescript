<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Users</h1>
<ul>
    <% results.forEach(function(user) {%>
        <section class="user-block">
            <li>
                <a href="/users/<%=user.id%>">
                    <img class="profile-image"src="<%=user.profileImageUrl%>" alt="User profile image" width="50" height="50"/>
                </a>
            </li>
            <li>
                Name: <%= user.name %>
            </li>
            <li>
                Username: <%= user.username %>
            </li>
        </section>


    <% }); %>
</ul>

<%if (next) { %>
    <button><a href="<%= next %>">Next</a></button>
<% } %>
<%if (previous) { %>
    <button><a href="<%= previous %>">Next</a></button>
<% } %>

</body>
<%- include('_footer') -%>
</html>